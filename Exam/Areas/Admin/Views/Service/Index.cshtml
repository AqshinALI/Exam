@model List<Service>
@{
    int count = 0;
}
<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic Table</h4>
            <a asp-action="create" asp-controller="service"><button type="button" class="btn btn-info btn-rounded btn-fw">Create</button></a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name.</th>
                            <th>Description</th>
                            <th>Icon</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                            <td>@count</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Icon</td>
                                <td><a asp-action="Update" asp-route-id="@item.Id" asp-controller="service"><button type="button" class="btn btn-info btn-rounded btn-fw">Update</button></a></td>
                                <td><a asp-action="Delete" asp-route-id="@item.Id" asp-controller="service"><button type="button" class="btn btn-info btn-rounded btn-fw">Delete</button></a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>